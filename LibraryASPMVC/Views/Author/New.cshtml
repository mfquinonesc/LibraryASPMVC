<section class="hero is-fullheight-with-header">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="columns is-8 is-variable is-multiline">

                <form class="column is-one-thirds has-text-left" method="post" action="Create">
                    <h1 class="subtitle is-1 is-size-3">Crear Autor</h1>

                    <div class="field">
                        <label class="label">Nombre</label>
                        <div class="control">
                            <input name="Name" class="input" type="text">
                        </div>
                        @* <p class="help is-danger">Ingrese un nombre</p> *@
                    </div>
                    <div class="field">
                        <div class="field is-grouped">
                            <div class="control">
                                <button type="submit" class="button is-link">Crear</button>
                            </div>
                            <div class="control">
                                <a asp-action="Index" asp-controller="Home" type="submit" class="button">Cancelar</a>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="column is-two-thirds has-text-left">
                </div>
            </div>
        </div>
    </div>
</section>
