@model List<LibraryASPMVC.Models.Author>;
@{
    int index = 0;
}
<h2 class="subtitle is-1 is-size-3"> Tabla Autores </h2>

<table class="table is-fullwidth is-hoverable">
    <thead>
        <tr>
            <th class="has-text-centered">Índice</th>
            <th class="has-text-centered">Autor</th> 
            <th class="has-text-centered">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            index++;
            <tr>
                <td class="has-text-centered">@index</td>
                <td class="has-text-centered">@author.Name</td> 
                <td class="has-text-centered">
                    <a asp-controller="Author" asp-action="Delete" asp-route-id="@author.AuthorId">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>